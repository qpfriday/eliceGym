{"ast":null,"code":"import { reactive } from \"vue\";\nimport axios from \"axios\";\nimport { addCommas } from \"@/scripts/lib\";\nexport default {\n  setup() {\n    const state = reactive({\n      items: []\n    });\n    const load = () => {\n      axios.get(\"/api/cart/items\").then(({\n        data\n      }) => {\n        console.log(data);\n        state.items = data;\n      });\n    };\n    const remove = itemId => axios.delete(`/api/cart/items/${itemId}`).then(() => {\n      load();\n    });\n    load();\n    return {\n      state,\n      addCommas,\n      remove\n    };\n  }\n};","map":{"version":3,"names":["reactive","axios","addCommas","setup","state","items","load","get","then","data","console","log","remove","itemId","delete"],"sources":["C:\\Users\\modev\\Desktop\\chan\\gallery\\frontend\\src\\pages\\Cart.vue"],"sourcesContent":["<script>\r\nimport {reactive} from \"vue\";\r\nimport axios from \"axios\";\r\nimport {addCommas} from \"@/scripts/lib\";\r\n\r\nexport default {\r\n  setup() {\r\n    const state = reactive({\r\n      items: []\r\n    })\r\n    const load = () => {\r\n      axios.get(\"/api/cart/items\").then(({data}) => {\r\n        console.log(data);\r\n        state.items = data;\r\n      })\r\n    }\r\n    const remove = (itemId) => (\r\n        axios.delete(`/api/cart/items/${itemId}`).then(() => {\r\n          load();\r\n        })\r\n    );\r\n\r\n    load();\r\n\r\n    return {state, addCommas, remove}\r\n  },\r\n}\r\n</script>\r\n\r\n<template>\r\n  <div class=\"cart\">\r\n    <div class=\"container\">\r\n      <ul>\r\n        <li v-for=\"(i, idx) in state.items\" :key=\"idx\">\r\n          <img :src=\"i.imgPath\"/>\r\n          <span class=\"name\">{{ i.name }}</span>\r\n          <span class=\"price\">{{ addCommas(i.price - i.price * i.discountPer / 100) }} 원</span>\r\n          <i class=\"fa fa-trash\" @click=\"remove(i.id)\"></i>\r\n        </li>\r\n      </ul>\r\n      <router-link to=\"/order\" class=\"btn btn-primary\" v-if=\"state.items.length=0\">구입하기</router-link>\r\n      <router-link to=\"/\" class=\"btn btn-primary\" v-else>쇼핑하기</router-link>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<style scoped>\r\n.cart ul {\r\n  list-style: none;\r\n  margin: 0;\r\n  padding: 0;\r\n}\r\n\r\n.cart ul li {\r\n  border: 1px solid #eee;\r\n  margin-top: 25px;\r\n  margin-bottom: 25px;\r\n}\r\n\r\n.cart ul li img {\r\n  width: 150px;\r\n  height: 150px;\r\n}\r\n\r\n.cart ul li .name {\r\n  margin-left: 25px;\r\n}\r\n\r\n.cart ul li .price {\r\n  margin-left: 25px;\r\n}\r\n\r\n.cart ul li i {\r\n  float: right;\r\n  font-size: 20px;\r\n  margin: 65px 50px;\r\n}\r\n\r\n.cart .btn {\r\n  width: 300px;\r\n  padding: 30px 50px;\r\n  font-size: 20px;\r\n  display: block;\r\n  margin: 0 auto;\r\n}\r\n</style>"],"mappings":"AACA,SAAQA,QAAQ,QAAO,KAAK;AAC5B,OAAOC,KAAI,MAAO,OAAO;AACzB,SAAQC,SAAS,QAAO,eAAe;AAEvC,eAAe;EACbC,KAAKA,CAAA,EAAG;IACN,MAAMC,KAAI,GAAIJ,QAAQ,CAAC;MACrBK,KAAK,EAAE;IACT,CAAC;IACD,MAAMC,IAAG,GAAIA,CAAA,KAAM;MACjBL,KAAK,CAACM,GAAG,CAAC,iBAAiB,CAAC,CAACC,IAAI,CAAC,CAAC;QAACC;MAAI,CAAC,KAAK;QAC5CC,OAAO,CAACC,GAAG,CAACF,IAAI,CAAC;QACjBL,KAAK,CAACC,KAAI,GAAII,IAAI;MACpB,CAAC;IACH;IACA,MAAMG,MAAK,GAAKC,MAAM,IAClBZ,KAAK,CAACa,MAAM,CAAE,mBAAkBD,MAAO,EAAC,CAAC,CAACL,IAAI,CAAC,MAAM;MACnDF,IAAI,CAAC,CAAC;IACR,CAAC,CACJ;IAEDA,IAAI,CAAC,CAAC;IAEN,OAAO;MAACF,KAAK;MAAEF,SAAS;MAAEU;IAAM;EAClC;AACF","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}